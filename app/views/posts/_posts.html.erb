<ul class="list-unstyled">
  <% posts.each do |post| %>
    <li class="media mb-3">
      <% if post.user.img? %>
        <%= image_tag post.user.img.url, size:'50x50', class: 'mr-2 rounded img-fluid', alt: "" %>
      <% else %>
        <%= image_tag "icon_144400_128.png", size:'50x50', class: 'mr-2 rounded img-fluid', alt: "" %>
      <% end %>
      <div class="media-body">
        <div>
          <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted">posted at <%= post.created_at %></span>
        </div>
        <div>
          <%= image_tag post.img.url, size:'500x500', class: 'rounded img-fluid', alt: ""%>
        </div>
        <div>
          <p><%= post.content %></p>
        </div>
        <div>
          <% if current_user == post.user %>
            <%= link_to "Delete", post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
        <div>
          <% if current_user == post.user %>
            <%= link_to "Edit", edit_post_path(post), class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate posts %>
</ul>