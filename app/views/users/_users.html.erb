<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <% if user.img? %>
          <%= image_tag user.img.url, size:'50x50', class: 'mr-2 rounded img-fluid', alt: "" %>
        <% else %>
          <%= image_tag "icon_144400_128.png", size:'50x50', class: 'mr-2 rounded img-fluid', alt: "" %>
        <% end %>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>