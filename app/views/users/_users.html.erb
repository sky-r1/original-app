<div class="container row">
  <% if users.any? %>
    <ul class="list-unstyled col-lg-8 offset-lg-2 col-10 offset-1">
      <% users.each do |user| %>
        <div class="">
          <li class="row mb-1 border-bottom">
            <div class="col-2" style="margin: auto">
              <% if user.img? %>
                <%= link_to image_tag(user.img.url, class: 'rounded img-fluid border', alt: ""), user_path(user) %>
              <% else %>
                <%= link_to image_tag("icon_144400_128.png", size:'100x100', class: 'rounded img-fluid border', alt: ""), user_path(user) %>
              <% end %>
            </div>
            <div class="col-8">
              <table class="table table-borderless table-sm" style="table-layout: fixed;">
              <tr>
                <th>名前</th>
                <td><%= user.name %></td>
              </tr>
              <tr>
                <th>ID</th>
                <td><%= user.account %></td>
              </tr>
            </table>
            <p style="white-space: pre-wrap; word-wrap: break-word;"><%= user.intro %></p>
            </div>
            <% if current_user == user %>
              <div class="col-2"></div>
            <% else %>
              <div class="col-2">
                <%= render 'relationships/follow_button', user: user %>
              </div>
            <% end %>
          </li>
        </div>
      <% end %>
    </ul>
    <%= paginate users %>
  <% end %>
</div>