<div class="container row">
  <% if users.any? %>
    <ul class="list-unstyled col-sm-8 offset-sm-2">
      <% users.each do |user| %>
        <div class="">
          <li class="row mb-1 border-bottom">
            <div class="col-sm-2" style="margin: auto">
              <% if user.img? %>
                <%= link_to image_tag(user.img.url, size:'100x100', class: 'rounded img-fluid', alt: ""), user_path(user) %>
              <% else %>
                <%= link_to image_tag("icon_144400_128.png", size:'100x100', class: 'rounded img-fluid', alt: ""), user_path(user) %>
              <% end %>
            </div>
            <div class="col-sm-8">
              <table class="table table-borderless table-sm">
              <tr>
                <th>名前</th>
                <td><%= user.name %></td>
              </tr>
              <tr>
                <th>ID</th>
                <td><%= user.account %></td>
              </tr>
              <tr>
                <th>自己紹介</th>
                <td><%= user.intro %></td>
              </tr>
            </table>
            </div>
            <% if current_user == user %>
              <div class="col-sm-2"></div>
            <% else %>
              <div class="col-sm-2">
                <%= render 'relationships/follow_button', user: user %>
              </div>
            <% end %>
          </li>
        </div>
      <% end %>
    </ul>
    <%= paginate users %>
  <% end %>
</div>