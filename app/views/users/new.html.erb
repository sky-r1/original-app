<div class="row">
  <div class="col-sm-6 offset-sm-3 border">
    <div class="text-center">
      <h1>Yaeh!</h1>
    </div>

    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group col-sm-6 offset-sm-3">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control' ,placeholder: '例：example@yaeh.com' %>
      </div>
      
      <div class="form-group col-sm-6 offset-sm-3">
        <%= f.label :phone, '電話番号' %>
        <%= f.text_field :phone, class: 'form-control' ,placeholder: '例：09012345678' %>
      </div>
      
      <div class="form-group col-sm-6 offset-sm-3">
        <%= f.label :account, 'ユーザID：半角英数字または. @ _のみ使用可' %>
        <%= f.text_field :account, class: 'form-control' ,placeholder: '例：tanaka_taro' %>
      </div>
      
      <div class="form-group col-sm-6 offset-sm-3">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' ,placeholder: '例：田中　太郎' %>
      </div>

      <div class="form-group col-sm-6 offset-sm-3">
        <%= f.label :password, 'パスワード：半角英数字または. @ _のみ使用可（８文字以上）' %>
        <%= f.password_field :password, class: 'form-control' ,placeholder: 'パスワード'%>
      </div>

      <div class="form-group col-sm-6 offset-sm-3">
        <%= f.label :password_confirmation, 'パスワード確認用' %>
        <%= f.password_field :password_confirmation, class: 'form-control' ,placeholder: 'パスワード確認用'%>
      </div>
      
      <!--reCAPTCHA-->
      <!--<%= flash[:recaptcha_error] %>-->
    
      <!--<%= recaptcha_tags %>-->
      
      <div class="form-group col-sm-6 offset-sm-3">
        <%= f.submit '登録する', class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
  <div class="col-sm-6 offset-sm-3 border border-5 mt-5 text-center mb-5">
    <p class="mt-3">アカウントをお持ちですか？</p>
    <%= link_to 'ログイン', login_path, class: 'btn btn-primary btn-block col-sm-6 offset-sm-3 mb-5' %>
  </div>
</div>