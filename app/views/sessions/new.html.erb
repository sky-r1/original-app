<div class="row mt-5">
  <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-10 offset-1 border">
    <div class="text-center mt-3">
      <h1>Yaeh!</h1>
    </div>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="form-group col-10 offset-1">
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control', placeholder: '例：example@yaeh.com' %>
      </div>

      <div class="form-group col-10 offset-1">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
      </div>
      
      <div class="form-group col-10 offset-1">
        <%= f.submit 'ログイン', class: 'btn btn-primary btn-block mb-5' %>
      </div>
      
    <% end %>
  </div>
  
  <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-10 offset-1 border border-5 mt-5 text-center mb-5">
    <p class="mt-3">アカウントをお持ちでない方</p>
    <%= link_to '登録する', signup_path, class: 'btn btn-primary btn-block col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-10 offset-1 mb-5' %>
  </div>
</div>